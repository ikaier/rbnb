<div class="row">
<div class="col-5">
<% @cars.sort_by(&:price).each do |car| %>
      
       <%= link_to car_path(car),class:"custom-card" do %>
       <div class="card mt-4" >
        <% if car.photos.attached? %>
          <%= cl_image_tag car.photos.first.key, height: 200, crop: :scale, class: 'card-img-top' %>
        <% else %>
          <img class="card-img-top" src="https://d1zgdcrdir5wgt.cloudfront.net/media/vehicle/images/7c0IdMWbT7WJG_X4DFCZuw.1440x700.jpg" alt="Card image cap">
        <% end %>
        <div class="card-body">
        <h3 class="card-title"><strong> <%= car.model %></strong> </h3>
        <h5 class="card-text"> $<%= car.price %> /Day</h5>
        <h5 class="card-text"> Address: <%= car.address %> </h5>
       
        </div>
        </div>
        <% end %>

<% end %>
</div>
<div class="col-7">
<div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
</div>

