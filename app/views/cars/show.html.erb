<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @car.photos.each.with_index do |photo, i| %>
      <li data-target="#myCarousel" data-slide-to="<%= i %>" class="<%= 'active' if i == 0 %>"></li>
    <% end %>
  </ol>

  <div class="carousel-inner">
    <% @car.photos.each.with_index do |photo, i| %>
      <div class="carousel-item <%= 'active' if i == 0 %>">
        <%= cl_image_tag photo.key %>
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="container">
  <h1 class="title"><%= @car.model %></h1>
  <h3 class="description"><%= @car.description %></h3>
  <h2 class="price">$<%= @car.price %> / day</h2>
  <%= link_to "Go back for a new search", search_page_path %>
</div>
