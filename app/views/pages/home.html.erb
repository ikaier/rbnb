<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1474471981552-e3084590b868?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div class="container">
    <h1><center><strong>Rent a Car Now</strong></center></h1>
    <br/>
    <%= form_tag(search_page_path, :method => "get") do %>
    <div class="input-group md-form form-sm form-2 pl-0">

      <%= search_field_tag :search, params[:search], placeholder: "Search anything", class: "form-control my-0 py-1 red-border" %>
     <div class="input-group-btn">
      <%= button_tag "Search", :class => 'btn btn-blue',:name => nil%>
    </div>

    </div>
    <% end %>
  </div>
</div>

<div class="cards-container">
  <h2><strong>Top Categories</strong></h2>

  <div class="card-deck">
    <div class="card">
      <% if @first_car.photos.attached? %>
        <%= cl_image_tag @first_car.photos.first.key, crop: :scale, class: 'card-img-top' %>
      <% else %>
        <img class="card-img-top" src="https://resources.turo.com/f/81934/424x318/df302dea72/category-carousel_luxury-2x.jpg" alt="Image">
      <% end %>
      <div class="card-body">
        <a class="card-link" href="https://aircns.herokuapp.com/cars/search?search=<%=@counts.keys[0]%>"><%=@counts.keys[0]%></a>
      </div>
    </div>
    <div class="card">
      <% if @second_car.photos.attached? %>
        <%= cl_image_tag @second_car.photos.first.key, crop: :scale, class: 'card-img-top' %>
      <% else %>
        <img class="card-img-top" src="https://resources.turo.com/f/81934/424x318/7f4e44231c/category-carousel_classic-2x.jpg" alt="Image">
      <% end %>
      <div class="card-body">
        <a class="card-link" href="https://aircns.herokuapp.com/cars/search?search=<%=@counts.keys[1]%>"><%=@counts.keys[1]%></a>
      </div>
    </div>
    <div class="card">
      <% if @third_car.photos.attached? %>
        <%= cl_image_tag @third_car.photos.first.key, crop: :scale, class: 'card-img-top' %>
      <% else %>
        <img class="card-img-top" src="https://resources.turo.com/f/81934/424x318/288f0f5045/category-carousel_convertible-2x.jpg" alt="Image">
      <% end %>
      <div class="card-body">
        <a class="card-link" href="https://aircns.herokuapp.com/cars/search?search=<%=@counts.keys[2]%>"><%=@counts.keys[2]%></a>
      </div>
    </div>
    <div class="card">
      <% if @fourth_car.photos.attached? %>
        <%= cl_image_tag @fourth_car.photos.first.key, crop: :scale, class: 'card-img-top' %>
      <% else %>
        <img class="card-img-top" src="https://resources.turo.com/f/81934/424x318/3fc8dbffa5/category-carousel_minivan-2x.jpg" alt="Image">
      <% end %>
      <div class="card-body">
        <a class="card-link" href="https://aircns.herokuapp.com/cars/search?search=<%=@counts.keys[3]%>"><%=@counts.keys[3]%></a>

      </div>
    </div>
  </div>
</div>

<div class="cards-container">
  <h2><strong>Newest Offers</strong></h2>
  <div class="row">
    <% @lastest_cars.limit(2).each do |car| %>
        <div class="col-sm-6">
          <div class="card">
            <%= cl_image_tag car.photos.first.key, crop: :scale, class: 'card-img-top' %>
              <div class="card-infos">
                <h5 class="card-title"><%= car.model %></h5>
                <h5 class="card-title">$<%= car.price %> / day</h5>
              </div>
              <div class="center">
              <%= button_to "Book Now!", book_path(car), class: "btn btn-blue" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

